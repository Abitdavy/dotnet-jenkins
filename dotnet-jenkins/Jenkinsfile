pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'dotnet-jenkins-image'
        GITHUB_REPO = 'https://github.com/Abitdavy/dotnet-jenkins.git'
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'github-token', variable: 'GITHUB_TOKEN')]) {
                        sh """
                        echo "******** ehcking out github ********"
                        git clone https://${GITHUB_TOKEN}@${GITHUB_REPO} .
                        """
                    }
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${env.DOCKER_IMAGE}:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("${env.DOCKER_IMAGE}:${env.BUILD_NUMBER}").run('-d -p 8081:80')
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}